{{!-- Modal para modificar a un alumno --}}

<div class="modal fade" id="updateModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="tituloCrear">Ingresa A un Curso</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="updateForm">     
                <label for="updateId" class="form-label pt-2">ID</label>
                <input type="text"  class="form-control" name="id" id="updateId" required disabled>
                <label for="updateNombre" class="form-label pt-2">Nombre</label>
                <input type="text"  class="form-control" name="nombre" id="updateNombre" required>
                <label for="updateApellido" class="form-label pt-2">Apellido</label>
                <input type="text"  class="form-control" name="apellido" id="updateApellido" required>
                <label for="updateEmail" class="form-label pt-2">Email</label>
                <input type="text"  class="form-control" name="email" id="updateEmail" required>
                <label for="updatePassword" class="form-label pt-2">Password</label>
                <input type="password"  class="form-control" name="password" id="updatePassword">
                <input type="submit" class="btn btn-primary mt-3 d-flex" value="Modificar">
      </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>


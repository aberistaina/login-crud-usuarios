{{!-- Modal Para Inscribirse en un Curso --}}
<div class="modal fade" id="createUserLogin" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="tituloCrear">Ingresa A un Curso</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <!-- Pestañas Modal -->
        <ul class="nav nav-tabs" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="tab-formulario" data-bs-toggle="tab" data-bs-target="#contenido-formularioLogin" type="button" role="tab" aria-controls="contenido-formulario" aria-selected="true">Registrarme</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="tab-otro" data-bs-toggle="tab" data-bs-target="#contenido-otroLogin" type="button" role="tab" aria-controls="contenido-otro" aria-selected="false">Ya Estoy Registrado</button>
          </li>
        </ul>

        <!-- Pestaña Registro -->
        <div class="tab-content">
          <div class="tab-pane fade show active" id="contenido-formularioLogin" role="tabpanel" aria-labelledby="tab-formulario">
            <form id="formCreateLogin">     
                <label for="nameCreate" class="form-label pt-2">Nombre</label>
                <input type="text"  class="form-control" name="nombre" id="nameCreate" required>
                <label for="apellidoCreate" class="form-label pt-2">Apellido</label>
                <input type="text"  class="form-control" name="apellido" id="apellidoCreate" required>
                <label for="emailCreate" class="form-label pt-2">Email</label>
                <input type="text"  class="form-control" name="email" id="emailCreate" required>
                <label for="passwordLogin"  class="form-label pt-2 d-block">Contraseña</label>
                <input type="password"  class="form-control w-75 d-inline-flex password" name="password" id="passwordCreate2" required><i class="bi bi-eye-fill mostrarPassword d-inline-flex fs-5 text-center ps-4" data-target="passwordCreate2"></i>
                <label id="passwordLogin2" for="passwordConfirmCreate" class="form-label pt-2 d-block">Repite tu Contraseña</label>
                <input type="password" data-target="input2" class="form-control w-75 d-inline-flex password" name="confirmPassword" id="passwordConfirmCreate2" required><i class="bi bi-eye-fill mostrarPassword d-inline-flex fs-5 text-center ps-4" data-target="passwordConfirmCreate2"></i>
                <button class="btn btn-primary mt-3 d-flex" type="submit"><i class='bi bi-person-plus-fill'></i>&nbsp Registrarme</button>
            </form>
          </div>

        <!-- Pestaña Ya Estoy Registrado -->
          <div class="tab-pane fade" id="contenido-otroLogin" role="tabpanel" aria-labelledby="tab-otro">
            <form id="formRegistradoLogin">
                <label for="emailRegistradoLogin" class="form-label pt-2">Email</label>
                <input type="text"  class="form-control" name="email" id="emailRegistrado" required>
                <label for="passwordLogin" class="form-label pt-2 d-block">Contraseña</label>
                <input type="password"  data-target="input3" class="form-control w-75 d-inline-flex password" name="password" id="loginPassword2" required ><i class="bi bi-eye-fill mostrarPassword d-inline-flex fs-5 text-center ps-4" data-target="loginPassword2"></i>
                <button  class="btn btn-primary mt-3 d-flex" type="submit"><i class="bi bi-door-open"></i>&nbsp Login</button>
            </form>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>